<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); %>
<!--Class to center all items-->
<body class="homepage centerItems">

    <%- include('layouts/navbar'); %>

    <div class="container">
        <form method = "post">
        <!--title-->
        <h3>SIGN UP</h3>
        <div class = "form-group">
        <!--Enter email address-->
        <lebel class="email">Email Address</lebel>
        <input
        type = "email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter email"
        />
        </div>
        <div class="form-group">
            <!--Enter password-->
            <lebel for="password">Password</lebel>
            <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Enter password"
        />
        </div>
        <br />
        <!--clickable button to sign up-->
        <button type = "submit" class="btn btn primary">Sign Up</button>
    </form>
    </div>
    
</body>

<%- include('layouts/footer'); %>

</html>