<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); %>
<body class="homepage centerItems">
    <div>
      <!--title-->
        <h1 class="h1-white">REGISTER</h2>
        <form action="/users/register" method="POST">
          <!--Enter name-->
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
            />
          </div>
          <!--Enter email address-->
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <!--Enter password-->
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
            />
          </div>
          <!--Enter password confirmation-->
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
            />
          </div>
          <!--clickable button to sign up-->
          <button type="submit">
            Register
          </button>
        </form>
        <p class="nav-link">
          <!--Link that leads to login page-->
          Have An Account? <a href="/users/login">Login</a>
        </p>
    </div>   
</body>
<%- include('layouts/footer'); %>
</html>